<div class="row">
  <div class="col s12">
    <div class="card small brown lighten-3">
      <div class="card-image"><img src="https://lorempixel.com/500/500" alt=""></div>
      <div class="card-stacked">
        <div class="card-content">
          <span class="card-title">{{user.name}}</span>
          <p>{{user.location}}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <h3 class="header">Reviews</h3>
    <table class="highlight">
      <thead>
        <tr>
          <th>Kava</th>
          <th>Rating</th>
        </tr>
      </thead>

      <tbody>
        {{#each user.reviews}}
          <tr>
            <td>{{kavaId}}</td>
            <td>{{rating}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>